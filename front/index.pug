body
  
  #container
    #sigma
    #panel
      h4 Редагування посту радіорозвідки
      #values
        input#id(type='hidden')
        .title Назва
        input#station(value='Пост 1')
        .title IP адреса
        input#address(value='127.0.0.1')
        .title Дата встановлення
        input#date
        .title путь до файла
        input#path(value='~/ForDemo.csv')
        .title координати
        input#position(disabled)
          
      div#controls
        input#position(type='button' value='Змінити позицію' onclick='Station.position()')
        input#sync(type='button' onclick=`Station.sync(I("station").value)` value=`Перевірити зв'язок`)
        input#save(type='button' onclick=`Station.save()` value=`Зберегти`)
        input#hide(type='button' onclick=`I('panel').style.display = 'none'` value=`Відмінити`)
          
      
    #map
    #graphContainer
      #daterange
        input#start.daterange(ondatechange='DateRange.change()')
        input#end.daterange(onchange='DateRange.change()')
      canvas#graph(width='100vw' height='15vh')
                    
